
public class Car {
	private int gas = 10;


	// constructor
	public Car() {
		
	}


	public void displayGas() {
		System.out.println("Gas remaining: " + gas);
	}

	public void drive(int gas) {
		setGas(gas - 1);
		System.out.println("Driving, gas remaining: " + gas);
		
	}

	
	
	
	
	
	// GETTERS AND SETTERS
	public int getGas() {
		return gas;
	}

	public void setGas(int gas) {
		this.gas = gas;
	}


}
