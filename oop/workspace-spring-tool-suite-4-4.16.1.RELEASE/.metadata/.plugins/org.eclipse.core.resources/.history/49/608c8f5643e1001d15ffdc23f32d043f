
public class Car {
	private int gas = 10;


	// constructor
	public Car() {
		
	}


	public void displayGas() {
		System.out.println("Fuel remaining: " + this.gas + "/10");
	}

	public void drive() {
		setGas(this.gas - 1);
		System.out.println("Driving, fuel remaining: ");
		displayGas();
		
	}
	
	public void useBoosters() {
		setGas(this.gas - 3);
		System.out.println("Using boosters, fuel remaining: ");
		displayGas();
	}
	
	public void refuel() {
		setGas(this.gas + 2);
		System.out.println("Refueling, fuel remaining: ");
	}
	
	

	
	
	
	
	
	// GETTERS AND SETTERS
	public int getGas() {
		return gas;
	}

	public void setGas(int gas) {
		this.gas = gas;
	}


}
